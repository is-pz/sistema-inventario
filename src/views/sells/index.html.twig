{% extends "base.html.twig" %}


{% block container %}
	<div class="col-lg-12 mt-3 p-3">
		<div class="card" >
			<div class="card-body">
				<div class="card-title col-lg-12 row">
                    <h5 class="col">
						<i class="bi bi-currency-dollar"></i>
                        Historico de ventas
                    </h5>
                    
                    <div class="col ">
                         <a href="{{ full_url_for("home") }}" class="btn btn-primary">
							Regresar
                        </a>
						<a href="{{ full_url_for("create_sell") }}" class="btn btn-primary">
							Agregar una venta
                        </a>
                    </div>
				</div>
				<table class="table table-striped text-center">
					<thead>
						<tr>
							<th>Id</th>
							<th>Nombre del producto</th>
							<th>Precio de venta</th>
							<th>Precio de producto</th>
							<th>Fecha de la venta</th>
							<th>Opciones</th>
						</tr>
					</thead>
					<tbody>
					{% for sell in sells %}
						<tr>
							<td><p>{{ sell.id }}</p></td>
							<td><p>{{ sell.nombreProducto }}</p></td>
							<td><p>${{ sell.precioVenta }}</p></td>
							<td><p>${{ sell.precioProducto }}</p></td>
							<td><p>{{ sell.sell_at|date("m/d/Y") }}</p></td>
							<td> <a href="{{ full_url_for('show_sell', { 'id': sell.id }) }}" 
									class="col btn btn-primary">Revisar venta</a>
							</td>
						</tr>
					{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}
