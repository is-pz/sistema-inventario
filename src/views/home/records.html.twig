<div class="col-lg-12 mt-2">
   <div class="row">
        <div class="col-lg-6">
            <div class="card" >
                <div class="card-body">
                    <h5 class="card-title"> <i class="bi bi-basket-fill"></i> Productos más vendidos</h5>
                    <table class="table table-striped text-center">
                        <thead>
                            <tr>
                                <th>Producto</th>
                                <th>Total de vendidos</th>
                                <th>En stock</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for bestseller in bestsellers %}
                                <tr>
                                    <td><p>{{ bestseller.nombreProducto }}</p></td>
                                    <td><p>{{ bestseller.totalSold }}</p></td>
                                    <td><p>{{ bestseller.stock }}</p></td>
                                </tr>
                                
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card" >
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-cart-plus-fill"></i> Últimas ventas</h5>
                    <table class="table table-striped text-center">
                        <thead>
                            <tr>
                                <th>Producto</th>
                                <th>Cantidad de vendidos</th>
                                <th>En stock</th>

                            </tr>
                        </thead>
                        <tbody>
                            {% for lastS in lastSold %}
                                <tr>
                                    <td><p>{{ lastS.nombreProducto }}</p></td>
                                    <td><p>{{ lastS.cantidadVendidos }}</p></td>
                                    <td><p>{{ lastS.stock }}</p></td>

                                </tr>
                                
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-lg-12 mt-2">
            <div class="card" >
                <div class="card-body row mx-auto">
                    <h5 class="card-title col-lg-12"> <i class="bi bi-plus-square-fill"></i> Productos recien añadidos</h5>
                    {% for lastProduct in lastAddedProduct %}
                        <div class="col-lg-4 mt-2 last-product">
                            
                            <a href="{{ full_url_for('show_product', {'id': lastProduct.id}) }}" class="link-producto">
                                <div class="row text-center ">
                                    <img 
                                        class="col-lg-3" 
                                        src="/assets/img/default/product-default.png" 
                                        alt="Imagen de producto" 
                                        height="80">
                                    <p class="col-lg-6">{{ lastProduct.nombreProducto }}</p>
                                    <span class="col-lg-3 badge text-bg-warning span-price">$ {{ lastProduct.precioPublico }}</span>
                                </div>
                                <p>
                                    {% for category in categories %}
                                        {% if category.id == lastProduct.idCategoria %}
                                            {{ category.nombreCategoria }}
                                        {% endif %}        
                                    {% endfor %}
                                </p>
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
   </div>
</div>