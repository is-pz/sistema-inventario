{% extends "base.html.twig" %}


{% block container %}
	<div class="col-lg-8 mx-auto mt-3 p-3">
		<div class="card col-lg-12">
			<div class="card-body">
				<div class="card-title col-lg-12 row  ">
                    <h5 class="col">
						<i class="bi bi-tags-fill"></i>
                        Revision de producto
                    </h5>
                    
                    <div class="col">
                        <a href="{{ full_url_for("products") }}" class="btn btn-primary">
							Regresar
                        </a>
						 <a href="{{ full_url_for("edit_product", {'id': product.id}) }}" class="btn btn-warning">
							Editar
                        </a>
                    </div>
				</div>

				<div class="row mt-3" >

					<div class="mb-3 col-lg-6">

						<p>Nombre del producto: <strong> {{ product.nombreProducto }} </strong> </p>
					</div>
					<div class="mb-3 col-lg-6">
						
						<p>No. De serie: <strong> {{ product.noSerie }} </strong> </p>
					</div>
					<div class="mb-3 col-lg-6">
						
						<p>Descripcion del producto: <strong> {{ product.descripcionProducto }} </strong> </p>
					</div>
					<div class="mb-3 col-lg-6">
						
						<p>Precio de costo: <strong> {{ product.precioCosto }} </strong> </p>
					</div>
					<div class="mb-3 col-lg-6">
						
						<p>Precio al publico: <strong> {{ product.precioPublico }} </strong> </p>
					</div>
					<div class="mb-3 col-lg-6">
						<p>En stock: <strong> {{ product.stock }} </strong> </p>
					</div>
					<div class="mb-3 col-lg-6">
						<p>Categoria: <strong> {{ category.nombreCategoria }} </strong> </p>
					</div>
					<div class="mb-3 col-lg-6">
						<p>
							Estatus:
							{% if product.active == 1 %}
								<strong> Activo </strong>
							{% else %}
								<strong> Inactivo </strong>
							{% endif %}
						</p>
					</div>
					
				</div>
			</div>
		</div>
	</div>
{% endblock %}
